{
    "env": {
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "no-template-curly-in-string": "error",
        "no-alert": "error",
        "no-debugger": "error",
        "no-empty-function": "error",
        "vars-on-top": "error",
        "no-case-declarations": "off",
        "linebreak-style": [
            "off",
            "windows"
        ]
    }
}