{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": ["./src/types","node_modules/@types"],
        "lib":["ES2021"],
        "target":"ES2021"
    },
    "include": [
        "./src/**/*", "./config/**/*"
    ],
    "exclude": ["**/*.spec.ts"]
}